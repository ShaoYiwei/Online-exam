extends home
block admin-content
    .content
        input(id="page" style="display:none" name= total)
        blockquote.layui-elem-quote.layui-quote-nm 出卷易-我的题库
        fieldset.ayui-elem-field.layui-field-title
            legend 试题库
        form.layui-form.layui-form-pane
            .layui-form-item
                label.layui-form-label 科目
                .layui-input-inline
                    input.layui-input(id='subject' value= subject_default readonly='readonly')
                .layui-form-item
                    label.layui-form-label 题型
                    .layui-input-inline
                        select(id='type' name='type')
                            option(value='' selected) 空
                            option(value="0") 选择题
                            option(value="1") 填空题
                            option(value="2") 判断题
                            option(value="3") 简答题
                            option(value="4") 解答题
                            option(value="5") 名词解释
                    label.layui-form-label 知识点
                    .layui-input-inline(style='width:150px' )
                        input.layui-input(name='tips' value=tips ? tips : '')
                    label.layui-form-label 题目
                    .layui-input-inline(style='width:150px')
                        input.layui-input(name='question' value=question ? question : '')
                    .layui-input-inline
                        button.layui-btn(type="button")  搜索
            table.layui-table.table(id='demo' lay-filter="test")
                script(type="text/html" id="barDemo")
                    a.layui-btn.layui-btn-mini.layui-btn-primary(lay-event='detail') 查看
                    a.layui-btn.layui-btn-mini(lay-event='edit') 编辑
                    a.layui-btn.layui-btn-danger.layui-btn-mini(lay-event='del') 删除
block scripts
    script(src='/js/backend/teacher/banklist.js')


