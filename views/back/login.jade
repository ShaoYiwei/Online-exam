extends ../common/layout

block styles
    link(rel='stylesheet', href='../css/bootstrap.min.css')
    link(rel='stylesheet', href='../css/style.css')
    link(rel='stylesheet', href='../css/login.css')

block content
    ul.layui-nav
        li.layui-nav-item.logo-title 智能在线考试系统
    .container.login_box
        form.form-signin(role="form" action='/admin/login' method='post')
            h2.form-signin-heading 超级管理员登陆
            input.form-control.login_input(type="text"  placeholder="账号" required="" autofocus="" name='username' id='username' value='admin' )
            input.form-control.login_input(type="password" placeholder="密码" required="" autofocus="" name='password' id='password' value='123456')
            .checkbox
                label(style="display: inline-block;margin-left: 15%;")
                    input(type="checkbox" value="remember-me")
                    span 记住密码
            button.btn.btn-lg.btn-primary.btn-block.login_btn(type="submit") 登录
            p.hidden#error #{error}

block scripts
    script.
        $(document).ready(function () {
            if($('#error').text()){
                layer.tips($('#error').text(),$('#username'))
            }
        })